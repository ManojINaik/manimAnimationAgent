# manimAnimationAgent - Environment Configuration
# Copy this file to .env and fill in your API keys

# Required: Gemini API Keys (comma-separated for load balancing)
# Get your keys from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-key-1,your-gemini-key-2,your-gemini-key-3

# Optional: ElevenLabs API Key for text-to-speech
# Get your key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE=false  # Set to true to enable voice generation, false to disable

# Optional: OpenAI API Key (if using OpenAI models)
OPENAI_API_KEY=your-openai-key

# Optional: Google Cloud Configuration (for Vertex AI)
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_LOCATION=us-central1

# Demo Mode (set to true for Streamlit Cloud deployment)
DEMO_MODE=false

# Port configuration (for local development)
PORT=8000 